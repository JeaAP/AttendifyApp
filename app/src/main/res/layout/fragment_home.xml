<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/OxfordBlue"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/accountImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/account_circle" />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/accountImage"
        android:text="[nama]"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/accountClass"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/accountImage"
        android:layout_below="@+id/accountName"
        android:text="[kelas]"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/accountImage"
        android:text="Hi [nama],"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/greetings"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/username"
        android:layout_below="@+id/accountImage"
        android:text="[greetings]"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/motivations"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/username"
        android:text="[motivasi]"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/attendify" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <androidx.cardview.widget.CardView
                android:id="@+id/abcentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[waktu]"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_medium"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="[tanggal]"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_medium"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time"
                        android:layout_marginTop="4dp"
                        android:text="[lokasi]"/>

                    <Button
                        android:id="@+id/btnAbcent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rectangle"
                        android:text="Absensi"
                        app:backgroundTint="@color/text"/>

                    <Button
                        android:id="@+id/btnSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnAbcent"
                        android:padding="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_button"
                        android:text="Jadwal"
                        android:textColor="@color/black"
                        android:drawableRight="@drawable/round_school_24"
                        app:backgroundTint="@color/design_default_color_background"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_below="@id/abcentCard"
                android:text="Activity"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/linkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/abcentCard"
                android:text="View all"
                android:textColor="@color/link"/>

            <LinearLayout
                android:id="@+id/activityLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/linkText"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="12dp">

               <FrameLayout
                   android:id="@+id/frameLayout"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/white"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>